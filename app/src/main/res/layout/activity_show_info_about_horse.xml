<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="230dp"
                android:layout_height="200dp"
                android:layout_marginEnd="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/horse1"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="230dp"
                android:layout_height="200dp"
                android:layout_marginEnd="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/horse2" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="230dp"
                android:layout_height="200dp"
                android:layout_marginEnd="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/horse3" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="230dp"
                android:layout_height="200dp"
                android:layout_marginEnd="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/horse4" />
        </LinearLayout>

    </HorizontalScrollView>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separator"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="6dp"
        android:text="Клюква"
        android:textColor="@color/textColor"
        android:textSize="@dimen/text_big_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="250 000р"
        android:layout_marginTop="6dp"
        android:textColor="@color/textColor"
        android:textSize="@dimen/text_big_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separator"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/price" />

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Год рождения"
        android:textColor="@color/textColor"
        android:textSize="@dimen/text_large_size"
        app:layout_constraintStart_toStartOf="@+id/price"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Пол"
        android:layout_marginTop="6dp"
        android:textColor="@color/textColor"
        android:textSize="@dimen/text_large_size"
        app:layout_constraintStart_toStartOf="@+id/age"
        app:layout_constraintTop_toBottomOf="@+id/age" />

    <TextView
        android:id="@+id/breed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Порода"
        android:layout_marginTop="6dp"
        android:textColor="@color/textColor"
        android:textSize="@dimen/text_large_size"
        app:layout_constraintStart_toStartOf="@+id/gender"
        app:layout_constraintTop_toBottomOf="@+id/gender" />

    <TextView
        android:id="@+id/color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Масть"
        android:layout_marginTop="6dp"
        android:textColor="@color/textColor"
        android:textSize="@dimen/text_large_size"
        app:layout_constraintStart_toStartOf="@+id/breed"
        app:layout_constraintTop_toBottomOf="@+id/breed" />

    <TextView
        android:id="@+id/father"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Отец"
        android:layout_marginTop="6dp"
        android:textColor="@color/textColor"
        android:textSize="@dimen/text_large_size"
        app:layout_constraintStart_toStartOf="@+id/color"
        app:layout_constraintTop_toBottomOf="@+id/color" />

    <TextView
        android:id="@+id/mother"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Мать"
        android:layout_marginTop="6dp"
        android:textColor="@color/textColor"
        android:textSize="@dimen/text_large_size"
        app:layout_constraintStart_toStartOf="@+id/father"
        app:layout_constraintTop_toBottomOf="@+id/father" />

    <TextView
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Высота в холке"
        android:textColor="@color/textColor"
        android:layout_marginTop="6dp"
        android:textSize="@dimen/text_large_size"
        app:layout_constraintStart_toStartOf="@+id/mother"
        app:layout_constraintTop_toBottomOf="@+id/mother" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Местоположение"
        android:layout_marginTop="6dp"
        android:textColor="@color/textColor"
        android:textSize="@dimen/text_large_size"
        app:layout_constraintStart_toStartOf="@+id/height"
        app:layout_constraintTop_toBottomOf="@+id/height" />

    <TextView
        android:id="@+id/docs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Документы"
        android:layout_marginTop="6dp"
        android:textColor="@color/textColor"
        android:textSize="@dimen/text_large_size"
        app:layout_constraintStart_toStartOf="@+id/location"
        app:layout_constraintTop_toBottomOf="@+id/location" />

    <TextView
        android:id="@+id/locationBirth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Место Рождения"
        android:layout_marginTop="6dp"
        android:textColor="@color/textColor"
        android:textSize="@dimen/text_large_size"
        app:layout_constraintStart_toStartOf="@+id/docs"
        app:layout_constraintTop_toBottomOf="@+id/docs" />

    <TextView
        android:id="@+id/sport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Спортивная карьера"
        android:layout_marginTop="6dp"
        android:textColor="@color/textColor"
        android:textSize="@dimen/text_large_size"
        app:layout_constraintStart_toStartOf="@+id/locationBirth"
        app:layout_constraintTop_toBottomOf="@+id/locationBirth" />

    <TextView
        android:id="@+id/specialty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Специализация"
        android:layout_marginTop="6dp"
        android:textColor="@color/textColor"
        android:textSize="@dimen/text_large_size"
        app:layout_constraintStart_toStartOf="@+id/sport"
        app:layout_constraintTop_toBottomOf="@+id/sport" />

    <TextView
        android:id="@+id/ageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Год рождения"
        android:layout_marginStart="15dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/textColorLight"
        android:textSize="@dimen/text_large_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <TextView
        android:id="@+id/genderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Пол"
        android:layout_marginStart="15dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/textColorLight"
        android:textSize="@dimen/text_large_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ageText" />

    <TextView
        android:id="@+id/breedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Порода"
        android:layout_marginStart="15dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/textColorLight"
        android:textSize="@dimen/text_large_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genderText" />

    <TextView
        android:id="@+id/colorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Масть"
        android:layout_marginStart="15dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/textColorLight"
        android:textSize="@dimen/text_large_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/breedText" />

    <TextView
        android:id="@+id/fatherText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Отец"
        android:layout_marginStart="15dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/textColorLight"
        android:textSize="@dimen/text_large_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/colorText" />

    <TextView
        android:id="@+id/motherText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Мать"
        android:layout_marginStart="15dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/textColorLight"
        android:textSize="@dimen/text_large_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fatherText" />

    <TextView
        android:id="@+id/heightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Высота в холке"
        android:layout_marginStart="15dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/textColorLight"
        android:textSize="@dimen/text_large_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/motherText" />

    <TextView
        android:id="@+id/locationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Местоположение"
        android:layout_marginStart="15dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/textColorLight"
        android:textSize="@dimen/text_large_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heightText" />

    <TextView
        android:id="@+id/docsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Документы"
        android:layout_marginStart="15dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/textColorLight"
        android:textSize="@dimen/text_large_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationText" />

    <TextView
        android:id="@+id/locationBirthText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Место Рождения"
        android:layout_marginStart="15dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/textColorLight"
        android:textSize="@dimen/text_large_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/docsText" />

    <TextView
        android:id="@+id/sportText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Спортивная карьера"
        android:layout_marginStart="15dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/textColorLight"
        android:textSize="@dimen/text_large_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationBirthText" />

    <TextView
        android:id="@+id/specialtyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Специализация"
        android:layout_marginStart="15dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/textColorLight"
        android:textSize="@dimen/text_large_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sportText" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separator"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/specialtyText" />

</androidx.constraintlayout.widget.ConstraintLayout>