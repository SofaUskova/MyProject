<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar" />

        <View
            android:id="@+id/viewOne"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#ECEFF1"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewOne">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="230dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="8dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/f" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="230dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="8dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/p" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="230dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="8dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/d" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="230dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="8dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/i" />
            </LinearLayout>

        </HorizontalScrollView>

        <View
            android:id="@+id/viewTwo"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#ECEFF1"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@+id/viewTwo">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_weight="1"
                    android:text="Клюква"
                    android:textColor="#263238"
                    android:textSize="18sp" />

                <TextView
                    android:layout_weight="1"
                    android:text="250 000р"
                    android:textColor="#263238"
                    android:textSize="18sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp">

                <View
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#ECEFF1" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_weight="1"
                    android:text="Год рождения" />

                <TextView
                    android:layout_weight="1"
                    android:text="2010г.р." />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_weight="1"
                    android:text="Пол" />

                <TextView
                    android:layout_weight="1"
                    android:text="Кобыла" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_weight="1"
                    android:text="Порода" />

                <TextView
                    android:layout_weight="1"
                    android:text="Тракененская" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_weight="1"
                    android:text="Масть" />

                <TextView
                    android:layout_weight="1"
                    android:text="Соловая" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_weight="1"
                    android:text="Отец" />

                <TextView
                    android:layout_weight="1"
                    android:text="Карнавал" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_weight="1"
                    android:text="Мать" />

                <TextView
                    android:layout_weight="1"
                    android:text="Балерина" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_weight="1"
                    android:text="Высота в холке" />

                <TextView
                    android:layout_weight="1"
                    android:text="173см" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_weight="1"
                    android:text="Местоположение" />

                <TextView
                    android:layout_weight="1"
                    android:text="Орловкая обл, г. Орел" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_weight="1"
                    android:text="Документы" />

                <TextView
                    android:layout_weight="1"
                    android:text="ВНИИК" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_weight="1"
                    android:text="Место рождения" />

                <TextView
                    android:layout_weight="1"
                    android:text="Орловкая обл, г. Орел" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_weight="1"
                    android:text="Специализация" />

                <TextView
                    android:layout_weight="1"
                    android:text="Конкур" />

            </TableRow>

        </TableLayout>

        <View
            android:id="@+id/viewHour"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#ECEFF1"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

        <TextView
            android:id="@+id/textFreeInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="Отличная кобыла, подходит как под опытного всадника, так и под начинающего. Свободно ходит маршруты 110-120см. Может ехать простые маршруты выездки, одиночные барьеры 130-140см. Никогда не смотрит на барьер"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewHour" />

        <View
            android:id="@+id/viewFifty"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#ECEFF1"
            app:layout_constraintTop_toBottomOf="@+id/textFreeInformation" />


        <ImageButton
            android:id="@+id/imageButtonProfile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView2"
            app:srcCompat="@drawable/kiany" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:text="Киану Ривз"
            android:textColor="#263238"
            app:layout_constraintStart_toEndOf="@+id/imageButtonProfile"
            app:layout_constraintTop_toBottomOf="@+id/viewFifty" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="КСК “Серебрянная подкова”"
            android:textColor="#263238"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <View
            android:id="@+id/viewSix"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#ECEFF1"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonProfile" />

        <ImageButton
            android:id="@+id/imageButtonAddFavorite"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_favorite_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewSix" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Избранное"
            android:textColor="#263238"
            app:layout_constraintStart_toStartOf="@+id/imageButtonAddFavorite"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonAddFavorite"
            app:layout_constraintEnd_toEndOf="@+id/imageButtonAddFavorite"/>

        <View
            android:id="@+id/viewSix1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#ECEFF1"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Похожие объявления"
            android:textColor="#607D8B"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewSix1" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:scrollbars="none"
            android:paddingStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_marginEnd="16dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/f" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_marginEnd="16dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/p" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_marginEnd="16dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/d" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_marginEnd="16dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/i" />
            </LinearLayout>

        </HorizontalScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>